[
	{
		"label": "Dev Server",
		"command": "pnpm run dev",
		"cwd": "$ZED_WORKTREE_ROOT",
		"use_new_terminal": false,
		"allow_concurrent_runs": false,
		"reveal": "always"
	},
	{
		"label": "Test GitHub Actions (CI)",
		"command": "deno",
		"args": ["task", "ci:test"],
		"cwd": "$ZED_WORKTREE_ROOT",
		"use_new_terminal": true,
		"allow_concurrent_runs": false,
		"reveal": "always",
		"tags": ["deno", "ci", "test"]
	},
	{
		"label": "Create New Blog Post",
		"command": "deno",
		"args": ["task", "post"],
		"cwd": "$ZED_WORKTREE_ROOT",
		"use_new_terminal": true,
		"allow_concurrent_runs": false,
		"reveal": "always",
		"tags": ["deno", "blog", "content"]
	}
]
