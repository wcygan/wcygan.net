{
	"name": "wcygan.github.io",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"setup": "pnpm install && pnpm build",
		"dev": "pnpm install && vite dev --open",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "deno task fix-mermaid && prettier --config .config/.prettierrc --ignore-path .prettierignore --write .",
		"format:check": "prettier --config .config/.prettierrc --ignore-path .prettierignore --check .",
		"lint": "prettier --config .config/.prettierrc --ignore-path .prettierignore --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:integration": "vitest run --config vitest.config.integration.ts",
		"post": "node scripts/new-post.js",
		"ci:test": "deno run --allow-all scripts/test-github-actions.ts",
		"ci:test:quick": "deno run --allow-all scripts/quick-test.ts",
		"ci:test:ci": "deno run --allow-all scripts/test-github-actions.ts --workflow ci",
		"ci:test:verbose": "deno run --allow-all scripts/test-github-actions.ts --verbose",
		"ci:check": "deno run --allow-all scripts/test-github-actions.ts --dry-run",
		"ci:help": "deno run --allow-all scripts/test-github-actions.ts --help",
		"download": "deno run --allow-read --allow-write --allow-net scripts/download-resume.ts",
		"pre-commit": "deno task fix-mermaid && pnpm run format && pnpm run lint && pnpm run check",
		"deploy": "wrangler deploy",
		"deploy:preview": "wrangler deploy --branch preview",
		"dev:wrangler": "wrangler dev",
		"analyze": "pnpm run build && open build-stats.html",
		"analyze:size": "pnpm run build && du -sh .svelte-kit/cloudflare"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.4",
		"@rollup/plugin-terser": "^0.4.4",
		"@sveltejs/adapter-cloudflare": "^7.0.4",
		"@sveltejs/kit": "^2.15.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@testing-library/svelte": "^5.2.8",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"jsdom": "^26.1.0",
		"mdsvex": "^0.12.3",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"puppeteer": "^24.10.2",
		"rollup-plugin-visualizer": "^6.0.3",
		"shiki": "^1.26.1",
		"shiki-transformer-copy-button": "^0.0.3",
		"svelte": "^5.39.11",
		"svelte-check": "^4.1.1",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.19.1",
		"vite": "^6.0.7",
		"vitest": "^2.1.8",
		"wrangler": "^4.23.0"
	},
	"dependencies": {
		"@tailwindcss/typography": "^0.5.16",
		"mermaid": "^11.7.0"
	},
	"packageManager": "pnpm@9.15.3"
}
